# ============================================
# Environment Variables for Docker Deployment
# Copy this file to .env and fill in the values
# ============================================

# ==========================================
# Application
# ==========================================
NODE_ENV=production
PORT=5000
LOG_LEVEL=info

# ==========================================
# MongoDB Configuration
# ==========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-strong-password-here
MONGO_PORT=27017

# ==========================================
# Redis Configuration
# ==========================================
REDIS_PASSWORD=your-redis-password-here
REDIS_PORT=6379

# ==========================================
# Authentication
# ==========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Minimum 32 characters required
JWT_SECRET=your-jwt-secret-here-must-be-at-least-32-characters-long-use-crypto-randomBytes
JWT_EXPIRY=7d

# ==========================================
# Cloudinary (Image Storage)
# ==========================================
# Format: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=cloudinary://123456789012345:abcdefghijklmnopqrstuvwxyz@your-cloud-name

# ==========================================
# AI Provider (Gemini)
# ==========================================
AI_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key-here

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins, or * for all
CORS_ORIGIN=https://your-frontend-domain.com

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# Worker Configuration
# ==========================================
WORKER_CONCURRENCY=5

# ==========================================
# Frontend Configuration
# ==========================================
FRONTEND_PORT=3000
